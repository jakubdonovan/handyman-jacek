{
  "name": "@handyman/client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-modal": "^3.10.6",
    "formik": "^2.1.7",
    "graphql": "^15.3.0",
    "pure-react-carousel": "^1.27.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.11.0",
    "react-modal": "^3.11.2",
    "react-responsive-carousel": "^3.2.10",
    "react-scripts": "3.4.3",
    "typescript": "^4.0.3",
    "yup": "^0.29.3"
  },
  "scripts": {
    "start": "concurrently yarn:watch*",
    "build": "concurrently yarn:build*",
    "watch:react": "yarn build:css && react-scripts start",
    "watch:css": "postcss src/assets/css/tailwind.css -o src/assets/css/main.css",
    "build:react": "react-scripts build",
    "build:css": "postcss src/assets/css/tailwind.css -o src/assets/css/main.css",
    "generate:gql": "graphql-codegen --config codegen.yml",
    "test:react": "react-scripts test",
    "eject:react": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/fragment-matcher": "^1.17.8",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@handyman/common": "1.0.1",
    "@types/yup": "^0.29.7",
    "autoprefixer": "9.8.6",
    "postcss-cli": "^8.0.0",
    "tailwindcss": "^1.8.10"
  }
}
